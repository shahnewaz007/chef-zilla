@model Chef_Zilla.Models.ResetPasswordViewModel
@{
    ViewBag.Title = "Reset password";
}

<div class="container-fluid">
    <div class="row fixed-top">
        <div class="col-md-3 d-none d-md-block ">
            <img style="width: 70%" class="img-fluid" src="~/Images/Group 2.png" alt="">
        </div>
        <div class="col-md-3"></div>
        <div class="col-md-3"></div>
        <div class="col-md-3"></div>
    </div>
    <br>
    <br>

    <div class="row d-flex align-items-center mt-5">
        <div class="col-md-6 col-sm-10 offset-sm-1 offset-md-0 text-center animated pulse">
            <img style="width: 60%;" src="~/Images/forgot 2.jpg" alt="">
        </div><br>
        <div class="col-md-6">
            <div class="container-fluid">
                <div class="row text-center animated rubberBand">
                    <div class="col-md-12 ">
                        <h1 class="font-weight-bold">Reset Password</h1>
                    </div>
                </div>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    if (ViewData.ModelState.Keys.Any(k => ViewData.ModelState[k].Errors.Any()))
                    {
                        <div class="row mt-2">
                            <div class="col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-8 offset-2">
                                <div class="alert alert-warning alert-dismissible show" role="alert">
                                    @Html.ValidationSummary(true, "")
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="row animated bounceIn mt-2">
                        <div class="md-form col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-8 offset-2">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @style = "border-bottom: 1.2px solid #b3b3b3; " } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "ml-3 passwordLabel", @style = "color: #b30000;" })
                        </div>
                    </div>
                    <div class="row text-center animated bounceIn mt-n3">
                        <div class="md-form col-md-6 offset-md-3 col-sm-8 offset-sm-2 col-8 offset-2">
                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @style = "border-bottom: 1.2px solid #b3b3b3; " } })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "ml-3 confirmPasswordLabel", @style = "color: #b30000;" })
                        </div>
                    </div>
                    @Html.HiddenFor(model => model.PhoneNumber)
                    <div class="row text-center mt-4 animated fadeIn">
                        <div class="col-md-12">
                            <input type="submit" value="Verify" class="buttonCss" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row fixed-bottom">
        <div class="container-fluid px-0">
            <div class="row no-gutters d-none d-md-block">
                <div class="col-md-12">
                    <img style="width: 15%;" class="float-right" src="~/Images/Group 1.png" alt="">
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#Password").focus(function () {
                $(".passwordLabel").animate({ "top": '-25px' }, 100);
            });
            $("#ConfirmPassword").focus(function () {
                $(".confirmPasswordLabel").animate({ "top": '-25px' }, 100);
            });

            $('#Password').blur(function () {
                if (!$(this).val()) {
                    $(".passwordLabel").animate({ "top": '5px' }, 100);
                }
            })

            $('#ConfirmPassword').blur(function () {
                if (!$(this).val()) {
                    $(".confirmPasswordLabel").animate({ "top": '5px' }, 100);
                }
            })

            if (document.getElementById("Password").value) {
                $(".passwordLabel").animate({ "top": '-25px' }, 100);
            }

            if (document.getElementById("ConfirmPassword").value) {
                $(".confirmPasswordLabel").animate({ "top": '-25px' }, 100);
            }
        });
    </script>
    @Styles.Render("~/Animation/css")
    @Scripts.Render("~/bundles/jqueryval")
}
