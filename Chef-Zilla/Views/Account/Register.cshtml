@model Chef_Zilla.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container-fluid ">
    <div class="row fixed-top">
        <div class="col-md-3 d-none d-md-block ">
            <img style="width: 85%" class="img-fluid" src="~/Images/Group 2.png" alt="">
        </div>
        <div class="col-md-3"></div>
        <div class="col-md-3"></div>
        <div class="col-md-3"></div>
    </div>
    <br>
    <br>
    <br>

    <div class="row d-flex align-items-center mt-4">
        <div class="col-md-5 col-sm-10 offset-md-0 offset-sm-1 text-center animated swing">
            <img class="registerPhoto" src="~/Images/6459.jpg" alt="">
        </div>

        <div class="col-md-7">
            <div class="container-fluid animated pulse">
                <div class="row mt-5">
                    <div class="col-md-12 offset-md-0">
                        <h1 class="text-center">Create A New Account</h1>
                    </div>
                </div><br>
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    if (ViewData.ModelState.Keys.Any(k => ViewData.ModelState[k].Errors.Any()))
                    {
                        <div class="row">
                            <div class="col-12 mb-2">
                                <div class="alert alert-warning alert-dismissible show" role="alert">
                                    @Html.ValidationSummary(true, "")
                                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                    <div class="row">
                        <div class="md-form col-md-4 col-sm-6 offset-md-1 offset-sm-3 col-8 offset-2 mt-n1">
                            @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control", @style = "border-bottom: 1.2px solid #b3b3b3; " } })
                            @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "ml-3 firstNameLabel", @style = "color: #b30000;" })
                        </div>
                        <div class="md-form  col-md-4 col-sm-6 offset-md-1 offset-sm-3 col-8 offset-2 mt-n1">
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @style = "border-bottom: 1.2px solid #b3b3b3; " } })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                            @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "ml-3 lastNameLabel", @style = "color: #b30000;" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="md-form  col-md-4 col-sm-6 offset-md-1 offset-sm-3 col-8 offset-2 mt-n1">
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @style = "border-bottom: 1.2px solid #b3b3b3; " } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "ml-3 userNameLabel", @style = "color: #b30000;" })
                        </div>
                        <div class="md-form  col-md-4 col-sm-6 offset-md-1 offset-sm-3 col-8 offset-2 mt-n1">
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @style = "border-bottom: 1.2px solid #b3b3b3; " } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "ml-3 emailLabel", @style = "color: #b30000;" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="md-form  col-md-4 col-sm-6 offset-md-1 offset-sm-3 col-8 offset-2 mt-n1">
                            @Html.EditorFor(model => model.Number, new { htmlAttributes = new { @class = "form-control", @style = "border-bottom: 1.2px solid #b3b3b3; " } })
                            @Html.ValidationMessageFor(model => model.Number, "", new { @class = "text-danger" })
                            @Html.LabelFor(model => model.Number, htmlAttributes: new { @class = "ml-3 phoneNumberLabel", @style = "color: #b30000;" })
                        </div>
                        <div class="md-form  col-md-4 col-sm-6 offset-md-1 offset-sm-3 col-8 offset-2 mt-n1">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @style = "border-bottom: 1.2px solid #b3b3b3; " } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "ml-3 passwordLabel", @style = "color: #b30000;" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="md-form  col-md-4 col-sm-6 offset-md-1 offset-sm-3 col-8 offset-2 mt-n1">
                            @Html.EditorFor(model => model.ConfirmPassword, new { htmlAttributes = new { @class = "form-control", @style = "border-bottom: 1.2px solid #b3b3b3; " } })
                            @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                            @Html.LabelFor(model => model.ConfirmPassword, htmlAttributes: new { @class = "ml-3 confirmPasswordLabel", @style = "color: #b30000;" })
                        </div>
                    </div>

                    <div class="row text-center mt-4 animated fadeIn">
                        <div class="col-md-12">
                            <input type="submit" value="Register" class="buttonCss" />
                        </div>
                    </div>

                }
                <div class="row text-center animated fadeIn">
                    <div class="col-md-12 ">
                        <p class="color my-3">Already Have an Account ?</p>
                        @Html.ActionLink("Login", "Login", "Account", routeValues: null, htmlAttributes: new { @class = "btn buttonCss" })
                    </div>
                </div>
                <br>
                <br>
            </div>
        </div>

        @*<div class="row fixed-bottom ">
            <div class="container-fluid px-0">
                <div class="row no-gutters d-none d-md-block">
                    <div class="col-md-12">
                        <img style="width: 20%;" class="float-right" src="~/Images/Group 1.png" alt="">
                    </div>
                </div>
            </div>
        </div>*@
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#FirstName").focus(function () {
                $(".firstNameLabel").animate({ "top": '-25px' }, 100);
            });
            $("#LastName").focus(function () {
                $(".lastNameLabel").animate({ "top": '-25px' }, 100);
            });
            $("#UserName").focus(function () {
                $(".userNameLabel").animate({ "top": '-25px' }, 100);
            });
            $("#Email").focus(function () {
                $(".emailLabel").animate({ "top": '-25px' }, 100);
            });
            $("#Number").focus(function () {
                $(".phoneNumberLabel").animate({ "top": '-25px' }, 100);
            });
            $("#Password").focus(function () {
                $(".passwordLabel").animate({ "top": '-25px' }, 100);
            });
            $("#ConfirmPassword").focus(function () {
                $(".confirmPasswordLabel").animate({ "top": '-25px' }, 100);
            });

            $('#FirstName').blur(function() {
                if (!$(this).val()) {
                    $(".firstNameLabel").animate({ "top": '5px' }, 100);
                }
            });

            $('#LastName').blur(function() {
                if (!$(this).val()) {
                    $(".lastNameLabel").animate({ "top": '5px' }, 100);
                }
            });

            $('#UserName').blur(function() {
                if (!$(this).val()) {
                    $(".userNameLabel").animate({ "top": '5px' }, 100);
                }
            });

            $('#Email').blur(function() {
                if (!$(this).val()) {
                    $(".emailLabel").animate({ "top": '5px' }, 100);
                }
            });

            $('#Number').blur(function() {
                if (!$(this).val()) {
                    $(".phoneNumberLabel").animate({ "top": '5px' }, 100);
                }
            });

            $('#Password').blur(function() {
                if (!$(this).val()) {
                    $(".passwordLabel").animate({ "top": '5px' }, 100);
                }
            });

            $('#ConfirmPassword').blur(function() {
                if (!$(this).val()) {
                    $(".confirmPasswordLabel").animate({ "top": '5px' }, 100);
                }
            });

            if (document.getElementById("FirstName").value) {
                $(".firstNameLabel").animate({ "top": '-25px' }, 100);
            }

            if (document.getElementById("LastName").value) {
                $(".lastNameLabel").animate({ "top": '-25px' }, 100);
            }

            if (document.getElementById("UserName").value) {
                $(".userNameLabel").animate({ "top": '-25px' }, 100);
            }

            if (document.getElementById("Email").value) {
                $(".emailLabel").animate({ "top": '-25px' }, 100);
            }

            if (document.getElementById("Number").value) {
                $(".phoneNumberLabel").animate({ "top": '-25px' }, 100);
            }

            if (document.getElementById("Password").value) {
                $(".passwordLabel").animate({ "top": '-25px' }, 100);
            }

            if (document.getElementById("ConfirmPassword").value) {
                $(".confirmPasswordLabel").animate({ "top": '-25px' }, 100);
            }
        });
    </script>
    @Styles.Render("~/Animation/css")
    @Scripts.Render("~/bundles/jqueryval")
}
